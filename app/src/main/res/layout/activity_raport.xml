<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_raport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unistudent.app.unistudentappv2.RaportActivity"
    tools:background="@drawable/rapot1">

    <TextView
        android:text="Level : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Test 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp" />

    <TextView
        android:text="A. Productive Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:textSize="15dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="B. Receptive Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="128dp"
        android:textSize="15dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="C. Konowladge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="127dp"
        android:id="@+id/textView5"
        android:textSize="15dp"/>

    <TextView
        android:text="Average : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginBottom="86dp"
        android:id="@+id/textView6"
        android:textSize="15dp"/>

    <TextView
        android:text="Date of Issue :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/textView7"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

</RelativeLayout>
