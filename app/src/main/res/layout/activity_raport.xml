<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_raport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unistudent.app.unistudentappv2.RaportActivity"
    tools:background="@drawable/rapot1">

    <TextView
        android:text="Level : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="A. Productive Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="B. Receptive Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView11" />

    <TextView
        android:text="Listening"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/textView12"
        android:id="@+id/textView13"
        android:background="@drawable/isian1"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:text="C. Knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Vocabulary"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView15"
        android:background="@drawable/isian1"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Date of Issue : "
        android:padding="5dp"
        android:textSize="18dp"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:id="@+id/textView7"
        android:background="@drawable/isian1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <TextView
        android:text="Average : "
        android:padding="5dp"
        android:textSize="17dp"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/textView6"
        android:background="@drawable/isian"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"

        app:srcCompat="@drawable/smile_writing"
        android:id="@+id/imageView9"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Writing"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView10"
        android:textSize="15dp"
        android:padding="5dp"
        android:background="@drawable/isian"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/imageView9" />

    <TextView
        android:text="Speaking"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView11"
        android:background="@drawable/isian1"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Reading"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView12"
        android:background="@drawable/isian"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:text="Grammar"
        android:textSize="15dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/textView14"
        android:background="@drawable/isian"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView13" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/smile_grammar"
        android:id="@+id/imageView12"
        android:layout_above="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/smile_vocabulary"
        android:id="@+id/imageView14"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/smile_speaking"
        android:id="@+id/imageView19"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/smile_reading"
        android:id="@+id/imageView15"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/textView13"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/smile_listening"
        android:layout_marginBottom="15dp"
        android:id="@+id/imageView16"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/test1"
        android:id="@+id/imageButton"
        android:layout_above="@+id/textView3"
        android:layout_toEndOf="@+id/textView4" />


</RelativeLayout>
